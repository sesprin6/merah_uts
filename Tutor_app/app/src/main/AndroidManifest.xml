<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="uts.tugas.tutor">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".Splash" android:noHistory="true"
            android:theme="@style/Theme.AppCompat.NoActionBar"
            android:configChanges="keyboardHidden|orientation"
            android:windowSoftInputMode="stateHidden|adjustNothing">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
            android:name=".siswa.Siswa_Add"
            android:configChanges="keyboardHidden|orientation"
            android:windowSoftInputMode="stateHidden"
            android:label="Input Data Siswa"/>
        <activity
            android:name=".siswa.Siswa_Show_All"
            android:configChanges="keyboardHidden|orientation"
            android:windowSoftInputMode="stateHidden|adjustNothing"
            android:label="Daftar Siswa"/>
        <activity
            android:name=".siswa.Siswa_Show"
            android:configChanges="keyboardHidden|orientation"
            android:windowSoftInputMode="stateHidden"
            android:label="Edit Siswa"/>
        
        <activity
            android:name=".sekolah.Sekolah_Add"
            android:configChanges="keyboardHidden|orientation"
            android:windowSoftInputMode="stateHidden|adjustNothing"
            android:label="Input Data Sekolah"/>
        <activity
            android:name=".sekolah.Sekolah_Show_All"
            android:configChanges="keyboardHidden|orientation"
            android:windowSoftInputMode="stateHidden|adjustNothing"
            android:label="Daftar Sekolah"/>
        <activity
            android:name=".sekolah.Sekolah_Show"
            android:configChanges="keyboardHidden|orientation"
            android:windowSoftInputMode="stateHidden|adjustNothing"
            android:label="Edit Sekolah"/>

        <activity
            android:name=".paket.Paket_Add"
            android:configChanges="keyboardHidden|orientation"
            android:windowSoftInputMode="stateHidden|adjustNothing"
            android:label="Input Data Paket"/>
        <activity
            android:name=".paket.Paket_Show_All"
            android:configChanges="keyboardHidden|orientation"
            android:windowSoftInputMode="stateHidden|adjustNothing"
            android:label="Daftar Paket"/>
        <activity
            android:name=".paket.Paket_Show"
            android:configChanges="keyboardHidden|orientation"
            android:windowSoftInputMode="stateHidden|adjustNothing"
            android:label="Edit Paket"/>
    </application>

</manifest>